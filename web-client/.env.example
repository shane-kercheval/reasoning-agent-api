# Reasoning Agent Web Client Configuration
# Copy this file to .env and configure your values

# =============================================================================
# REQUIRED CONFIGURATION
# =============================================================================

# API Connection
REASONING_API_URL=http://localhost:8000                    # Local development
# REASONING_API_URL=https://your-api.onrender.com          # Production (Render)

# Authentication
API_TOKEN=token1                                          # Must match API_TOKENS in your API

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# Web Client Settings
WEB_CLIENT_PORT=8080                                      # Port for web client (development only)

# =============================================================================
# RENDER DEPLOYMENT EXAMPLES
# =============================================================================

# Production Example (Render):
# REASONING_API_URL=https://reasoning-agent-api-xyz.onrender.com
# API_TOKEN=token1
# (PORT is automatically set by Render)

# Development Example:
# REASONING_API_URL=http://localhost:8000
# API_TOKEN=token1
# WEB_CLIENT_PORT=8080
