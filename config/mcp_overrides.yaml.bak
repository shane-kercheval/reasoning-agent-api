# MCP Naming Conventions - Override Configuration
#
# All tool/prompt names use descriptive, LLM-friendly names
# Override keys match ORIGINAL MCP names: resource_name

# ============================================================================
# Server-Level Tags
# ============================================================================
server_tags:
  github-custom: [git, github]
  brave-search: [web-search]

# ============================================================================
# Tool-Specific Overrides
# ============================================================================
tools:
  # GitHub Tools
  github_custom__get_github_pull_request_info:
    name: get_github_pull_request_info

  github_custom__get_local_git_changes_info:
    name: get_local_git_changes_info

  # Dev Tools
  dev__get_directory_tree:
    name: get_directory_tree
    tags: [file-system-read]

  # Filesystem Tools - Unix-like but clear
  filesystem__read_text_file:
    name: read_text_file
    tags: [file-system-read

  filesystem__read_media_file:
    name: read_media_file
    tags: [file-system-read]

  filesystem__read_multiple_files:
    name: read_multiple_files
    tags: [file-system-read]

  filesystem__write_file:
    name: write_file
    tags: [file-system-write]

  filesystem__edit_file:
    name: edit_file
    tags: [file-system-write]

  filesystem__create_directory:
    name: create_directory
    tags: [file-system-write]

  filesystem__list_directory:
    name: list_directory
    tags: [file-system-read]

  filesystem__list_directory_with_sizes:
    name: list_directory_with_sizes
    tags: [file-system-read]

  filesystem__directory_tree:
    disable: true

  filesystem__move_file:
    name: move_file
    tags: [file-system-write, file-system-delete]

  filesystem__search_files:
    name: search_files
    tags: [file-system-read]

  filesystem__get_file_info:
    name: get_file_info
    tags: [file-system-read]

  filesystem__list_allowed_directories:
    name: list_allowed_directories
    tags: [config, permissions, security]

  file_operations__delete_file:
    name: delete_file
    tags: [file-system-delete]

  file_operations__delete_directory:
    name: delete_directory
    tags: [file-system-delete]

  # Web Tools
  tools__web_scraper:
    name: web_scraper
    tags: [web-search]

  # Brave Search Tools
  bra-e_search__brave_web_search:
    name: web-search

  brave_search__brave_local_search:
    name: web-search_location

# ============================================================================
# Prompt-Specific Overrides
# ============================================================================
prompts:
  # GitHub Prompts
  github_custom__create_pr_description:
    name: create_pr_description
    tags: [github]

  github_custom__create_commit_message:
    disable: true

  github_custom__code_review:
    name: code_review
    tags: [github]

  # Meta Prompts
  meta__generate_playbook:
    name: generate_playbook

  meta__update_playbooks:
    name: update_playbooks

  meta__generate_structured_prompt:
    name: generate_structured_prompt

  # Thinking Prompts
  thinking__explain:
    name: explain_concept

  thinking__transcript_summary:
    name: transcript_summary
    tags: 

  # Dev Prompts
  dev__create_playbook:
    name: create_playbook
    tags: 

  dev__code_review:
    name: code_review
    tags: 

  dev__implementation_guide:
    name: implementation_guide
    tags: 

  dev__implementation_guide_review:
    name: implementation_guide_review
    tags: 

  dev__python_coding_guidelines:
    name: python_coding_guidelines
    tags: 

  dev__coding_guidelines:
    name: coding_guidelines
    tags: 

  dev__unit_tests:
    name: unit_tests
    tags: 

  dev__commit_message:
    name: commit_message
    tags: 

  dev__update_documentation:
    name: update_documentation
    tags: 
