# Reasoning Agent API Configuration
# Copy this file to .env and configure your values

# =============================================================================
# REQUIRED CONFIGURATION
# =============================================================================

# OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key-here
REASONING_AGENT_BASE_URL=https://api.openai.com/v1

# Authentication (Required for Production)
# Generate secure tokens for production: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_TOKENS=token1,token2,token3
REQUIRE_AUTH=true

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# HTTP Client Timeouts (seconds)
HTTP_CONNECT_TIMEOUT=5.0
HTTP_READ_TIMEOUT=30.0
HTTP_WRITE_TIMEOUT=10.0

# HTTP Connection Pooling
HTTP_MAX_CONNECTIONS=20
HTTP_MAX_KEEPALIVE_CONNECTIONS=5
HTTP_KEEPALIVE_EXPIRY=30.0

# Server Configuration
API_HOST=0.0.0.0
API_PORT=8000

# MCP Server URLs (Optional - for future use)
MCP_WEB_SEARCH_URL=http://localhost:8001
MCP_WEATHER_URL=http://localhost:8002
MCP_FILESYSTEM_URL=http://localhost:8003

# Development Settings
DEBUG=false

# =============================================================================
# DEPLOYMENT EXAMPLES
# =============================================================================

# Production Example:
# OPENAI_API_KEY=sk-proj-abc123...
# API_TOKENS=prod-token-kJ8mN2pQ7rS,backup-token-X9vF4hB2nK
# REQUIRE_AUTH=true
# HTTP_CONNECT_TIMEOUT=5.0
# HTTP_READ_TIMEOUT=30.0

# Development Example:
# OPENAI_API_KEY=sk-proj-abc123...
# API_TOKENS=dev-token-123
# REQUIRE_AUTH=false
# DEBUG=true

# Testing Example:
# OPENAI_API_KEY=sk-proj-abc123...
# REQUIRE_AUTH=false
# HTTP_CONNECT_TIMEOUT=2.0
# HTTP_READ_TIMEOUT=15.0
